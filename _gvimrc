"hi ConId term=bold guifg=DeepSkyBlue1 gui=bold
"hi Type  term=bold guifg=DeepSkyBlue1 gui=bold
"
" ToggleBlinkCursor {{{

nmap <F1> :call BlinkCursorToggle()<cr>

func BlinkCursorToggle()
    if !exists('g:BlinkCursor')
        call BlinkCursorOn()
    else
        call BlinkCursorOff()
    endif
endfunc

func BlinkCursorOn()
    let g:BlinkCursor=1
    set guicursor+=n:blinkon300
    highlight CursorLine guibg=LawnGreen
    echo "Blink ▸ On"
endfunc

func BlinkCursorOff()
    if exists('g:BlinkCursor')
        unlet g:BlinkCursor
        highlight CursorLine term=underline cterm=underline guibg=#293739
        set guicursor=n-v-c:block-Cursor
        set guicursor+=i:ver100-iCursor
        set guicursor+=n-v-c:blinkon0
        set guicursor+=i:blinkwait0
    echo "Blink ▸ Off"
    endif
endfunc
" }}}
