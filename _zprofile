# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH=$HOME/bin:$PATH
fi

if [ -d "$HOME/.rvm/bin" ] ; then
    PATH="$HOME/.rvm/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
HOMEBINDIR="$HOME/bin"
if [ -d $HOMEBINDIR ] ; then
    for dir in `ls $HOMEBINDIR`; do
        dir=$HOMEBINDIR/$dir
        if [[ -d $dir ]] ; then
            PATH=$dir:$PATH
        fi
    done
fi

VIMDIR="/opt/vim/bin/"
if [ -d $VIMDIR ] ; then
    PATH=$VIMDIR:$PATH
fi

OCAMLDIR="/opt/ocaml/bin/"
if [ -d $OCAMLDIR ] ; then
    PATH=$OCAMLDIR:$PATH
fi
